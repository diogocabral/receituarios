<% if notice.present? %>
  <div class="alert alert-success" role="alert"><p id="notice"><%= notice %></p></div>
<% end %>

<h1>Orientações</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orientacoes.each do |orientacao| %>
      <tr>
        <td><%= link_to "#{orientacao.nome}", orientacao %></td>
        <td style="width: 80px;"><%= link_to 'Editar', edit_orientacao_path(orientacao) %></td>
        <td style="width: 80px;"><%= link_to 'Excluir', orientacao, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Nova Orientação', new_orientacao_path, :class => 'btn btn-default' %>