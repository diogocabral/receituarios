<% if notice.present? %>
  <div class="alert alert-info" role="alert"><p id="notice"><%= notice %></p></div>
<% end %>

<p>
	<strong>Nome da Receita:</strong>
	<%= @receita.nome %>

	<ul>
		<% @receita.itens_receita.each do |item| %>
		  <li>
		  	Uso <%= item.medicamento.uso.nome %><br />
		  	Medicamento: <%= item.medicamento.nome %><br />
		  	Quantidade: <%= pluralize(item.quantidade, item.unidade_medida.nome).upcase %><br />
		  	Instruções de Uso: <%= item.instrucoes_uso %><br />
		  	<% if item.sugestao_horario? %>
		  	Sugestão de horário: <%= item.sugestao_horario %></li>
		  	<% end %>
		  	Página Separada: <%= human_boolean item.pagina_separada %>
		<% end %>
	</ul>
</p>

<%= link_to 'Preparar Receita', preparar_receita_path(@receita), :class => 'btn btn-default' %>
<%= link_to 'Editar', edit_receita_path(@receita), :class => 'btn btn-default' %>
<%= link_to 'Voltar', receitas_path, :class => 'btn btn-default' %>
