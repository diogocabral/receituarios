        <td style="width: 80px;"><%= link_to 'Editar', edit_receita_path(receita) %></td>
        <td style="width: 80px;"><%= link_to 'Excluir', receita, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
