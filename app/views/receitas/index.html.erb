  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receitas.each do |receita| %>
      <tr>
        <td><%= link_to "#{receita.nome}", receita %></td>
