<%= form_for @receita, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>

  <% if @receita.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@receita.errors.count, "erro") %> ao tentar salvar:</h2>

      <ul>
      <% @receita.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome %>
    <%= f.text_field :nome, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <table class="table">
      <thead>
        <tr>
            <th>Medicamento</th>
            <th>Unidade de Medida</th>
            <th>Quantidade</th>
            <th>Instruções de Uso</th>
            <th>Sugestão de Horário</th>
            <th></th>
        </tr>
      <thead>
      <tbody id="itens">
        <%= f.fields_for(:itens) do |item_form| %>
          <%= render partial: 'item_form', :locals => {:item_form => item_form} %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="6">
            <%= link_to 'Adicionar Medicamento', '#', :onclick => 'alert("adicionar")', :class => 'btn btn-default' %>
          </td>
        </tr>
      </tfoot>
    <table>
  </div>

  <%= f.submit 'Salvar', :class => 'btn btn-default' %>
  <%= link_to 'Voltar', receitas_path, :class => 'btn btn-default' %>

<% end %>


