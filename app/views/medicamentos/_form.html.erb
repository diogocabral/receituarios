<%= form_for @medicamento, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>

  <% if @medicamento.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong><%= pluralize(@medicamento.errors.count, "erro") %> ao tentar salvar:</strong>

      <ul>
      <% @medicamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome %>
    <%= f.text_field :nome, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :uso %>
    <%= f.collection_select(:id_uso, Uso.order(:nome).all, :id, :nome, {:prompt => 'Selecione'}, {:class => 'form-control'}) %>
  </div>

  <%= f.submit 'Salvar', :class => 'btn btn-default' %>
  <%= link_to 'Voltar', medicamentos_path, :class => 'btn btn-default' %>

<% end %>

