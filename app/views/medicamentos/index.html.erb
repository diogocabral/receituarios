<% if notice.present? %>
  <div class="alert alert-info" role="alert"><p id="notice"><%= notice %></p></div>
<% end %>

<h1>Medicamentos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Uso</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicamentos.each do |medicamento| %>
      <tr>
        <td><%= link_to "#{medicamento.nome}", medicamento %></td>
        <td><%= medicamento.uso.nome %></td>
        <td style="width: 80px;"><%= link_to 'Editar', edit_medicamento_path(medicamento), :class => 'btn btn-default' %></td>
        <td style="width: 80px;"><%= link_to 'Excluir', medicamento, :class => 'btn btn-default', method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

