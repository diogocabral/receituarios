<% if notice.present? %>
  <div class="alert alert-info" role="alert"><p id="notice"><%= notice %></p></div>
<% end %>

<p>
  <strong>Nome:</strong>
  <%= @medicamento.nome %>
</p>
<p>
  <strong>Uso:</strong>
  <%= @medicamento.uso.nome %>
</p>

<%= link_to 'Editar', edit_medicamento_path(@medicamento), :class => 'btn btn-default' %>
<%= link_to 'Voltar', medicamentos_path, :class => 'btn btn-default' %>
